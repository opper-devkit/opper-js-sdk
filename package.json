{
  "name": "@opper/source",
  "version": "0.0.0",
  "scripts": {
    "docs": "typedoc",
    "build": "nx run-many --target=build,postbuild",
    "test": "nx run-many --target=test",
    "test:watch": "nx run-many --target=test --coverage --watch",
    "test:coverage": "nx run-many --target=test --coverage",
    "lint": "nx run-many --target=lint",
    "affected": "nx affected -t lint test build",
    "release": "export npm_config_legacy_peer_deps=false && nx release",
    "release:dev": "nx run-many --target=release:dev",
    "prepare": "husky"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.8.0",
    "@nx/eslint": "^22.0.0",
    "@nx/eslint-plugin": "^22.0.0",
    "@nx/js": "^22.0.0",
    "@nx/vite": "^22.0.0",
    "@nx/web": "^22.0.0",
    "@nx/workspace": "^22.0.0",
    "@swc-node/register": "~1.11.0",
    "@swc/core": "~1.15.0",
    "@swc/helpers": "~0.5.11",
    "@types/node": "^18.16.9",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nx": "^22.0.0",
    "prettier": "^3.0.0",
    "tslib": "^2.3.0",
    "typedoc": "^0.28.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.13.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
